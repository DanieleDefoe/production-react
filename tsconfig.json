{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    // compile to ES5 for older browsers
    "target": "ES5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node",
    // for packages that don't have ES modules (common js)
    "esModuleInterop": true,
    // Support for default imports (without "import * as" syntax)
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}